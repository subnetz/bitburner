{
    "compilerOptions": {
        "jsx": "react",
        "target": "ES2021",
        "module": "ESNext",
        "rootDir": "src/",
        "baseUrl": "src/",

        "paths": {
            "/lib/*": ["lib/*"],
            "/ui/*": ["ui/*"],
            "/util/*": ["util/*"],
        },

        "outDir": "build/",
        "moduleResolution": "node",
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "strictBindCallApply": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    }
}
